<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kappa Queue - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kappa Queue</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!(@ViewData["UsersVisible"] == "hidden")) {
                        <li><a asp-controller="UsersForm" asp-action="Index" class="navbar-brand" id="usersHref" >Пользователи</a></li>
                        }
                        <li><a href="/forms/rooms" class="navbar-brand" id="roomsHref" @ViewData["RoomsVisible"]>Кабинеты</a></li>
                        <li><a href="/forms/positions" class="navbar-brand" id="positionsHref" @ViewData["PositionsVisible"]>Должности</a></li>
                        <li><a href="/forms/queues" class="navbar-brand" id="queuesHref" @ViewData["QueuesVisible"]>Очереди</a></li>
                        <li><a href="/forms/reports" class="navbar-brand" id="reportsHref" @ViewData["ReportsVisible"]>Отчеты</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Kappa Queue
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
